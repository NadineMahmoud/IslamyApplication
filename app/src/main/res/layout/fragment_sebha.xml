<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@drawable/sebha_bg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/main_backg"
        android:layout_marginTop="30dp"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".8"/>

    <ImageView
        android:id="@+id/sebha_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/head_sebha"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".2"/>

    <ImageView
        android:id="@+id/sebha_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/sebha_body"
        android:layout_marginTop="-45dp"
        app:layout_constraintHeight_percent=".6"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintTop_toBottomOf="@id/sebha_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/sebha_body"
        app:layout_constraintEnd_toEndOf="@id/sebha_body"
        app:layout_constraintTop_toTopOf="@id/sebha_body"
        app:layout_constraintBottom_toBottomOf="@id/sebha_body">

        <TextView
            android:id="@+id/tvzikr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="سبحان الله"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="36sp"
            android:fontFamily="@font/janna_lt_bold" />

        <TextView
            android:id="@+id/txcounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="0"
            android:fontFamily="@font/janna_lt_bold"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>